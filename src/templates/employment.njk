<article class="mb-4">
  <div class="flex">
    <div class="flex flex-col">
      <span class="font-bold">{{ title }}</span>
      <span>{{ organization }}</span>
    </div>
    <div class="flex flex-col ml-auto">
      <span>{{ location }}</span>
      <span class="italic">{{ dates }}</span>
    </div>
  </div>
  <ul class="list-inside list-disc">
    {% for duty in duties %}
      <li>{{ duty }}</li>
    {% endfor %}
  </ul>
</article>